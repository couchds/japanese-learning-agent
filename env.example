# PostgreSQL Database Configuration
# Copy this file to .env and fill in your credentials

PGUSER=your_username
PGPASSWORD=your_password
PGHOST=localhost
PGPORT=5432
PGDATABASE=japanese_learning

# Backend API Port
PORT=3001

# JWT Secret for authentication (change this in production!)
JWT_SECRET=your-secret-key-change-in-production

# Recognition Service URL (optional, defaults to http://localhost:5000)
RECOGNITION_SERVICE_URL=http://localhost:5000

# Vosk Server URL (for speech transcription)
VOSK_SERVER_URL=ws://localhost:2700
