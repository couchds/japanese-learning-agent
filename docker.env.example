# PostgreSQL Database Configuration
PGUSER=japanese_user
PGPASSWORD=your_secure_password_here
PGHOST=postgres
PGPORT=5432
PGDATABASE=japanese_learning

# Backend API Port
PORT=3001

# JWT Secret for authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Recognition Service URL (internal Docker network)
RECOGNITION_SERVICE_URL=http://recognition_service:5000

# Vosk Server URL (internal Docker network)
VOSK_SERVER_URL=ws://vosk-server:2700

# Database URL for Prisma (constructed from above values)
DATABASE_URL=postgresql://${PGUSER}:${PGPASSWORD}@postgres:5432/${PGDATABASE}

